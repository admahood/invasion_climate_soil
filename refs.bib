journal = {Journal of Ecology},
keywords = {ecohydrology,hydrus,isotope,root,soil resource,tracer,two-layer hypothesis,water use},
number = {3},
pages = {998--1008},
title = {{Hydrologic niches explain species coexistence and abundance in a shrub–steppe system}},
